<table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Positions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @team.team_players.each do |team_player| %>
      <tr data-link="<%= edit_team_team_player_path(@team, team_player) %>">
        <td>
          <%= team_player.member_first_name %>
        </td>
        <td>
          <%= team_player.member_last_name %>
        </td>
        <td>
          <% team_player.positions.each do |position| %>
            <%= position.title %><br>
          <% end %>
        </td>
        <td>
          <div><%= link_to 'Edit Player', edit_team_team_player_path(@team, team_player), class: "btn btn-default", remote: true %></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render "layouts/modal" %>
