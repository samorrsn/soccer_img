<style>
body .modal {
  /* new custom width */
  width: 500px;
  /* must be half of the width, minus scrollbar on the left (30px) */
  margin-left: -250px;
}
input {
  width: 457px;
}
</style>
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
        <%= form_for(:session,  html: { class: "form col-md-12" }, url: sessions_path) do |f| %>
        <div class="form-group">
         <%= f.text_field :email, class: "form-control input-lg", placeholder:"Email" %>
       </div>
       <div class="form-group">
         <%= f.password_field :password , class: "form-control input-lg", placeholder:"Password"%>
       </div>
       <div class="form-group" >
         <%= f.submit "Login" ,class: "btn btn-primary" %>
         <%= link_to "Register", signup_path, class: "btn pull-right" %>
       </div>
       <% end %>
     </div>
   </div>
 </div>
</div>
