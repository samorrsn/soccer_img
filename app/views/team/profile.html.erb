<%= provide(:title, @team.name) %>
<div class="page-header">
    <h1><%= @team.name %> <small><%= @team.mascot %></small></h1>
</div>

<%= link_to "Calendar", calendar_path, class: "btn btn-large btn-primary" %>

<div class="panel panel-default">
    <div class="panel-heading">Team Players</div>
    </div>
    <!-- Leaving the body panel of this table empty for now -->
    <div class="panel-body"></div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Name</th>
                <th>Positions</th>
            </tr>
        </thead>
        <tbody>
            <% @team_members.each do |team_member| %>
                <tr>
                    <td><p><%= team_member.user_id %></p></td>
                    <td><p><!-- Will add name when decision for this is final --></p></td>
                    <td>
                        <% team_member.positions.each do |position| %>
                            <%= position.title %><br>
                        <% end %>
                    </td>
                    <td>
                        <div class="btn btn-xs">Profile</div>
                        <div class="btn btn-xs">Edit</div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
