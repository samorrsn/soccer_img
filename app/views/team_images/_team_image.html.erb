
<%= form_for [@team, @team_image] do |f| %>
  <div class="container-fluid">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <%= image_tag @team_image.image, class: "img-responsive img-rounded" %>
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-6 column">
        <div class="btn-group">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        <div class="btn-group">
          <%= link_to 'Delete Image', [@team, @team_image], data:{ confirm: 'Are you sure?'}, method: 'delete', class: 'btn btn-danger' %>
        </div>
      </div>
      <div class="col-md-6 column">
      </div>
    </div>
  </div>
<% end %>
