<%= form_for ([@team, @team_player]) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <form>
        <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
              <%= f.text_field :member_first_name, placeholder: "First Name", class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="form-group">
              <%= f.text_field :member_last_name, placeholder: "Last Name", class: "form-control" %>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-xs-6">
      <%= f.collection_check_boxes(:position_ids, @team.positions, :id, :title) do |b|  %>
        <%= b.label { b.check_box + b.text} %><br>
      <% end %>
      <hr>
    </div>
    <div class="col-xs-11" align="right">
      <div class ="form-group">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
<% end %>